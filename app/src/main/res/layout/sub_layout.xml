<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <include layout="@layout/set_background"></include>
    <ImageView
        android:id="@+id/close_email_sub"
        android:src="@drawable/ic_close_black_24dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_width="wrap_content"
        android:padding="15dp"
        android:tint="@color/White"
        android:layout_height="wrap_content" />

<LinearLayout
    android:layout_width="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_subscriptions_black_24dp"
        android:visibility="gone"
        android:id="@+id/logo_email_sub"
        android:layout_centerHorizontal="true"

        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/text_email_sub"
        android:text="Subscribe us and stay updated"
        android:textColor="@color/White"
        android:gravity="center"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_below="@+id/logo_email_sub"
        android:textSize="22sp"
        android:layout_marginTop="50dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/desc_email_sub"
        android:layout_below="@+id/text_email_sub"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:textColor="@color/White"
        android:gravity="center"
        android:textSize="12sp"
        android:layout_marginTop="20dp"
        />
    <EditText
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/inputtext_email_sub"
        android:layout_below="@+id/desc_email_sub"
        android:textColor="@color/Black"
        android:layout_marginTop="60dp"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:textColorHint="@color/Gray"
        android:hint="Enter your email"
        android:background="@color/colorWhite"
        android:layout_marginBottom="10dp"
        />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_below="@+id/inputtext_email_sub"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:id="@+id/submit_email_sub"
        android:layout_height="wrap_content">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Submit"
        android:textColor="@color/colorWhite"
        android:layout_centerInParent="true"
        android:src="@drawable/tab"
        android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/White"
            android:layout_centerInParent="true"
            android:text="Submit"/>

    </RelativeLayout>

</LinearLayout>
</RelativeLayout>