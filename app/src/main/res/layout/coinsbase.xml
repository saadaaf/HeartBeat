<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/row_list_linearLayout"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp">

        <ImageView
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_marginLeft="15dp"
            android:src="@drawable/coins"
            android:tint="@color/colorWhite" />

        <TextView
            android:id="@+id/coins"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="50"
            android:textColor="@color/colorWhite"
            android:textSize="18dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:gravity="right">

            <RelativeLayout
                android:id="@+id/r1"
                android:layout_width="180dp"
                android:layout_height="65dp"
                android:layout_gravity="right">

                <ImageView
                    android:layout_width="180dp"
                    android:layout_height="65dp"
                    android:src="@drawable/tab2" />

                <TextView
                    android:id="@+id/verification_Text_logo"
                    android:layout_width="45dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="6dp"
                    android:background="@drawable/item_verifiedby_ashu"
                    android:padding="4dp"
                    android:gravity="center"
                    android:layout_marginLeft="1dp"
                    android:rotation="340"
                    android:text="Will be popular"
                    android:textAllCaps="false"
                    android:textColor="#f9fafc"
                    android:textSize="10sp"
                    android:visibility="gone" />


                <TextView
                    android:id="@+id/amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="30dp"
                    android:text="500"
                    android:textColor="@color/colorWhite"
                    android:textSize="21dp" />


            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
